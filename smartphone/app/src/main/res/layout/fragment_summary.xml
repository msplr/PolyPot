<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.pdse.polypotapp.MainActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp">

            <android.support.v7.widget.CardView
                android:id="@+id/water_level_card"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:onClick="cardClick"
                app:cardUseCompatPadding="true"
                app:contentPadding="8dp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="0">

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/water_level_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_water_level"
                        android:tint="@android:color/holo_blue_light"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowSpan="2"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/water_level_text"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        app:autoSizeTextType="uniform"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_row="1"
                        app:layout_rowWeight="1"
                        android:gravity="end" />

                    <TextView
                        android:id="@+id/water_level_unit"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/water_level_unit"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="@android:color/darker_gray"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1"
                        android:gravity="end" />

                </android.support.v7.widget.GridLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/temperature_card"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:onClick="cardClick"
                app:cardUseCompatPadding="true"
                app:contentPadding="8dp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0">

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/temperature_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_temperature"
                        android:tint="@android:color/holo_red_light"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowSpan="2"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/temperature_text"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        app:autoSizeTextType="uniform"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="1"
                        app:layout_rowWeight="1"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/temperature_unit"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/temperature_unit"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="@android:color/darker_gray"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1"
                        android:gravity="start" />

                </android.support.v7.widget.GridLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/soil_moisture_card"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:onClick="cardClick"
                app:cardUseCompatPadding="true"
                app:contentPadding="8dp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="1">

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/soil_moisture_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_soil_moisture"
                        android:tint="@android:color/holo_blue_light"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowSpan="2"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/soil_moisture_text"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        app:autoSizeTextType="uniform"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1"
                        android:gravity="end" />

                    <TextView
                        android:id="@+id/soil_moisture_unit"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/soil_moisture_unit"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="@android:color/darker_gray"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_row="1"
                        app:layout_rowWeight="1"
                        android:gravity="end" />

                </android.support.v7.widget.GridLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/luminosity_card"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:onClick="cardClick"
                app:cardUseCompatPadding="true"
                app:contentPadding="8dp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="1">

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/luminosity_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_luminosity"
                        android:tint="@android:color/holo_orange_light"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowSpan="2"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/luminosity_text"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        app:autoSizeTextType="uniform"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/luminosity_unit"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/luminosity_unit"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                        android:textColor="@android:color/darker_gray"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="1"
                        app:layout_rowWeight="1"
                        android:gravity="start" />

                </android.support.v7.widget.GridLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/watering_status_card"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:onClick="cardClick"
                app:cardUseCompatPadding="true"
                app:contentPadding="8dp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="2">

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/watering_status"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center_vertical|center"
                        android:text="@string/watering_status_unknown"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="1"
                        app:layout_rowWeight="1" />

                </android.support.v7.widget.GridLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/plant_card"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_height"
                android:onClick="cardClick"
                app:cardUseCompatPadding="true"
                app:contentPadding="8dp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="2">

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/plant_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_plant"
                        android:tint="@android:color/holo_green_light"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowSpan="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/plant_text"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:gravity="center_vertical"
                        android:text="@string/plant_status_unknown"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        app:layout_column="0"
                        app:layout_columnWeight="1.5"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                </android.support.v7.widget.GridLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/latest_data_date_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="cardClick"
                app:cardUseCompatPadding="true"
                app:contentPadding="8dp"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="1"
                app:layout_row="3">

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/latest_data_date_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center"
                        android:text="@string/latest_data_date_unknown"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="1"
                        app:layout_rowWeight="1" />

                </android.support.v7.widget.GridLayout>

            </android.support.v7.widget.CardView>

        </android.support.v7.widget.GridLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>